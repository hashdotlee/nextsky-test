<div class="page-width my-[40px]">
	<div class="grid grid-flow-col auto-cols-auto gap-[4px]">
		<div class="col-span-4 grid grid-cols-2 m-0 gap-[4px]">
			{% for product in section.settings.collection-left.products limit: 4 %}
				{% render 'product-item',
					product: product
				%}
			{% endfor %}
		</div>
		<div class="col-span-4 h-[750px] bg-blue-100">
			{% render 'featured-product-item', product: section.settings.product %}
		</div>
		<div class="col-span-4 grid grid-cols-2 gap-[4px]">
			{% for product in section.settings.collection-right.products limit: 4 %}
				{% render 'product-item',
					product: product
				%}
			{% endfor %}
		</div>
	</div>
</div>

{% schema %}
{
	"name": "t:sections.product-grid.name",
	"tag": "section",
	"class": "section",
	"settings": [
		{
		  "type": "collection",
		  "id": "collection-left",
		  "label": "t:sections.featured-collection.settings.collection.label"
		},
		{
		  "type": "collection",
		  "id": "collection-right",
		  "label": "t:sections.featured-collection.settings.collection.label"
	  },
		  {
		  	"type": "product",
			"id": "product",
			"label": "t:sections.product.settings.product.label"
		  }
	],
	"blocks": [
	],
}
{% endschema %}
